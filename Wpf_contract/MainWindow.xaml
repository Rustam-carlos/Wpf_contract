        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_contract"
        mc:Ignorable="d"
        Title="MainWindow" Height="846" Width="872">
    <Grid Margin="0,0,2,-50">
        <Label Content="Город" Padding="0 0 0 0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="21"/>
        <Label Content="День" Padding="0 0 0 0" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Height="21"/>
